{
  "name": "hse-master-thesis-webrtc-speed-test",
  "private": true,
  "description": "The repository was founded with the purpose of performing webrtc speed test for Victor Kugay master thesis.",
  "repository": "https://github.com/victor-kugay/hse-master-thesis-webrtc-speed-test.git",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "os": [
    "darwin",
    "linux"
  ],
  "scripts": {
    "format": "prettier --write \"{src,tests}/**/*.mjs\"",
    "lint": "eslint \"{src,tests}/**/*.mjs\"",
    "torrent:seed": "node src/torrent/seed.mjs",
    "torrent:download": "node src/torrent/download.mjs"
  },
  "dependencies": {
    "bittorrent-tracker": "10.0.2",
    "webtorrent": "2.0.14",
    "wrtc": "0.4.7"
  },
  "devDependencies": {
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "lint-staged": "13.1.2",
    "prettier": "2.8.4",
    "yarnhook": "0.6.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
